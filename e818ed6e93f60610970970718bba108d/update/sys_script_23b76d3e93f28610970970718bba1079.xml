        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	// Query for child records
	var childGR = new GlideRecord('x_147145_finance_c_finance_case');
	childGR.addQuery('parent', current.sys_id);
	childGR.query();

	// Update each child with the state of the parent
	while (childGR.next()) {
		childGR.state = current.state;
		childGR.update();
	}

